{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "settings": {
    "ecmascript": 6,
    "jsx": true
  },
  "plugins": ["react", "ramda"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:ramda/recommended"
  ],
  "rules": {
    "semi": ["error", "never"],
    "strict": 0,
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-single"],
    "no-unused-vars": 0,
    "camelcase": 0,
    "no-underscore-dangle": 0
  }
}
